@{
    Layout = "_Layout";
}

@model SweetAndSavory.Models.Flavor

<div class="container">
    <h1>Edit Flavor</h1>
    <h4>Editing: @Html.DisplayFor(model => model.FlavorName)</h4>
</div>
<hr />

<div class="container">
    @using (Html.BeginForm())
    {
        <div class="form-container">
            @Html.HiddenFor(model => model.FlavorId)
            <div class="form-group">
                <label class="form-label">@Html.DisplayNameFor(model => model.FlavorName)</label>
                @Html.EditorFor(model => model.FlavorName, new { @class = "form-control" })
                <p class="text-danger">@Html.ValidationMessageFor(model => model.FlavorName)</p>
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    }
</div>
<hr />

<div class="container">
    <div class="link-container">
        <p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId }, new { @class = "btn btn-danger" })</p>
        <p>@Html.ActionLink("Back to All Flavors", "Index", null, new { @class = "btn btn-secondary" })</p>
    </div>
</div>