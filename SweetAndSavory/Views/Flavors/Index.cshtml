@{
    Layout = "_Layout";
}

@using SweetAndSavory.Models;

<div class="container">
    <h1>Flavors</h1>
</div>
<hr />

<div class="container">
    @if (Model.Count == 0)
    {
        <p>No Flavors have been added.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Flavor Name</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Flavor flavor in Model)
                {
                    <tr>
                        <td>@flavor.FlavorName</td>
                        <td>@Html.ActionLink("Details", "Details", new { id = flavor.FlavorId })</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<hr />

<div class="link-container">
    @Html.ActionLink("Add New Flavor", "Create", "Flavors", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Return Home", "Index", "Home", null, new { @class = "btn btn-secondary" })
</div>