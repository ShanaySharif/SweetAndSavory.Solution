@{
    Layout = "_Layout";
}

@using SweetAndSavory.Models;
@* @using Microsoft.AspNetCore.Identity; *@

<h4>Select a Flavor below:</h4>

@if (@Model.Count == 0)
{
  <h3>No current Flavors are available</h3>
} 

<ul>
  @foreach(Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>

<p>@Html.ActionLink("Create a new flavor profile", "Create", "Flavors")</p>
@Html.ActionLink("Return Home", "Index", "Home", null, new { @class = "btn btn-secondary" })