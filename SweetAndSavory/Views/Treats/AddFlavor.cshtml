@{
    Layout = "_Layout";
}

@model SweetAndSavory.Models.Treat

<div class="container">
  <h1>Add Flavor to a Treat</h1>
</div>
<hr />
<div class="container">
    <h4>Add @Html.DisplayFor(model => model.TreatName) to an Flavor: </h4>
</div>

@using (Html.BeginForm())
{<div class="form-container">
    @Html.HiddenFor(model => model.TreatId)
    <div>
        @Html.Label("Select Treat: ")
        @Html.DropDownList("TreatId", ViewBag.TreatId as SelectList)
    </div>
</div>
<div class="center">
    <input type="submit" value="Save" />
</div>
}
<div class="link-container">
    <p>@Html.ActionLink("Back to All Treats", "Index")</p>
</div>