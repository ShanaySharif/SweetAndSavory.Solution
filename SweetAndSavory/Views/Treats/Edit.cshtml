@{
    Layout = "_Layout";
}

@model SweetAndSavory.Models.Treat

<div class="text-center">
    <h1>Edit Treats</h1>
    <h3>Editing: @Html.DisplayFor(model => model.TreatName)</h3>
</div>
<hr />

@using (Html.BeginForm())
{
    <div class="form-container text-center">
        @Html.HiddenFor(model => model.TreatId)
        <div class="form-group">
            <label class="label">@Html.DisplayNameFor(model => model.TreatName)</label>
            @Html.EditorFor(model => model.TreatName, new { @class = "form-control" })
            <p class="text-danger font-weight-bold">@Html.ValidationMessageFor(model => model.TreatName)</p>
        </div>
        
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-success">Save</button>
        
    </div>
    <div class="text-center">
        <p>@Html.ActionLink("Delete Treat", "Delete", new { id = Model.TreatId }, new { @class = "btn btn-danger" })</p>

        <p>@Html.ActionLink("Back to All Treats", "Index", null, new { @class = "btn btn-secondary" })</p>
    </div>
}