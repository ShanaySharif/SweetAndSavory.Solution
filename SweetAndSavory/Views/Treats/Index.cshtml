
@{
    Layout = "_Layout";
}

@using SweetAndSavory.Models;
@* @using Microsoft.AspNetCore.Identity; *@

<h4>Select a Treat below:</h4>

@if (@Model.Count == 0)
{
  <h3>No current Treats are available</h3>
} 

<ul>
  @foreach(Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</li>
  }
</ul>

<p>@Html.ActionLink("Create a new treat profile", "Create", "Treats")</p>