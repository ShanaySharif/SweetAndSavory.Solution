@{
    Layout = "_Layout";
}

@model SweetAndSavory.Models.Treat

<div class=" text-center">
    <h1>Delete Treat</h1>
</div>
<hr />

<div class=" text-center">
    <div class="confirmation">
        <h2>Are you sure you want to delete <span class="machine-name">@Html.DisplayFor(model => model.TreatName)</span>? This action cannot be undone.</h2>
    </div>

    @using (Html.BeginForm())
    {
        <div class="center">
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    }
</div>

<div class=" text-center">
    <div class="link-container">
        <p>@Html.ActionLink("Back to All Treats", "Index", null, new { @class = "btn btn-secondary" })</p>
         @Html.ActionLink("Return Home", "Index", "Home", null, new { @class = "btn btn-secondary" })
    </div>
</div>